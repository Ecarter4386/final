<p id="notice"><%= notice %></p>
<% unless @product.image.blank? %>
  <%= image_tag @product.image.url, class: "img-responsive" %>
<% end %>


<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>


<p>
  <strong>Category:</strong>
  <%= @product.category.name %>
</p>

